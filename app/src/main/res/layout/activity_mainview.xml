<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EDF0"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageButton
            android:id="@+id/pottedImg"
            android:layout_width="177dp"
            android:layout_height="269dp"
            android:layout_marginTop="140dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/pottedimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.336" />

        <TextView
            android:id="@+id/shadedText"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Shaded Flowers"
            android:textSize="18sp"
            android:fontFamily="@font/domine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/shadedImg"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="@+id/shadedImg"
            app:layout_constraintTop_toBottomOf="@+id/shadedImg"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/shadedImg"
            android:layout_width="177dp"
            android:layout_height="269dp"
            android:layout_marginTop="140dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/shadedimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.336" />

        <TextView
            android:id="@+id/pottedText"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Potted Flowers"
            android:textSize="18sp"
            android:fontFamily="@font/domine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pottedImg"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/pottedImg"
            app:layout_constraintTop_toBottomOf="@+id/pottedImg"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/indoorImg"
            android:layout_width="177dp"
            android:layout_height="269dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/indoorimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/shadedImg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/shadedImg"
            app:layout_constraintTop_toBottomOf="@+id/shadedImg"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/decoImg"
            android:layout_width="177dp"
            android:layout_height="269dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/cutimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pottedImg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/pottedImg"
            app:layout_constraintTop_toBottomOf="@+id/pottedImg"
            app:layout_constraintVertical_bias="0.0" /> " />

        <ImageView
            android:id="@+id/userGreet"
            android:layout_width="448dp"
            android:layout_height="310dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/rect_1" />

        <TextView
            android:id="@+id/indoorText"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/domine"
            android:gravity="center"
            android:text="Indoor Flowers"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/shadedImg"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="@+id/shadedImg"
            app:layout_constraintTop_toBottomOf="@+id/indoorImg"
            app:layout_constraintVertical_bias="0.003" />

        <TextView
            android:id="@+id/decoText"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/domine"
            android:gravity="center"
            android:text="Cut Flowers"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/decoImg"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="@+id/decoImg"
            app:layout_constraintTop_toBottomOf="@+id/decoImg"
            app:layout_constraintVertical_bias="0.006" />

        <TextView
            android:id="@+id/greeting"
            android:layout_width="353dp"
            android:layout_height="212dp"
            android:fontFamily="@font/imbue_med"
            android:text=""
            android:textColor="#38532F"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.046" />

        <ImageButton
            android:id="@+id/infoBtn"
            android:layout_width="76dp"
            android:layout_height="70dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/infobtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.949"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>