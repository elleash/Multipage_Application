<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EDF0"
    android:backgroundTint="#00FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/userGreet"
            android:layout_width="448dp"
            android:layout_height="310dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/rect_1" />

        <ImageButton
            android:id="@+id/back1"
            android:layout_width="71dp"
            android:layout_height="79dp"
            android:backgroundTint="#00FFFFFF"
            android:rotation="-138"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/pottedImg1"
            android:layout_width="130dp"
            android:layout_height="219dp"
            android:layout_marginTop="140dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/asters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.197" />
        <TextView
            android:id="@+id/potflower1"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Aster 'Magic Purple'"
            android:textSize="18sp"
            android:fontFamily="@font/domine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pottedImg1"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="@+id/pottedImg1"
            app:layout_constraintTop_toBottomOf="@+id/pottedImg1"
            app:layout_constraintVertical_bias="0.001" />

        <ImageButton
            android:id="@+id/pottedImg2"
            android:layout_width="173dp"
            android:layout_height="263dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/goldilocks"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pottedImg1"
            app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintStart_toStartOf="@+id/pottedImg1"
            app:layout_constraintTop_toBottomOf="@+id/pottedImg1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/potflower2"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:fontFamily="@font/domine"
            android:gravity="center"
            android:text="Goldilocks"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pottedImg2"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="@+id/pottedImg2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.735" />

        <TextView
            android:id="@+id/purposeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/imbue_med"
            android:gravity="center"
            android:text="Potted flowers are flowers that can be planted from a pot as opposed to a garden."
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />

        <ImageButton
            android:id="@+id/pottedImg3"
            android:layout_width="173dp"
            android:layout_height="263dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/coleus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pottedImg2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/pottedImg2"
            app:layout_constraintTop_toBottomOf="@+id/pottedImg2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/potflower3"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:fontFamily="@font/domine"
            android:gravity="center"
            android:text="Coleus"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pottedImg3"
            app:layout_constraintStart_toStartOf="@+id/pottedImg3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>